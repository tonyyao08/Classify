h3 {
    display: block;
    text-align: center;
    font-size: 1.17em;
    margin-top: 1em;
    margin-bottom: 10px;
    margin-left: 0;
    margin-right: 0;
    font-weight: bold;
}

p {
    text-align: center;
    margin-bottom: 1em;
    margin-left: 0;
    margin-right: 0;
}

.viewbox img {
    height: 100%;
    display: block;
}

.viewbox {
    padding: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    .preview {
        height: 400px;
    }

    .label {
        margin-top: 20px;
    }

}

.system-info {
    width: 100%;
    margin-bottom: 20px;
}

.curr-image-display {
    margin-left: 50%; 
    bottom: 300px;
    height: auto;
}