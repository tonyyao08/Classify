<div class="container">
    <mat-toolbar class="mat-elevation-z2">
        <button mat-icon-button [autofocus]="false" (click)="drawer.toggle()">
            <mat-icon>menu</mat-icon>
        </button>
        <span>Parts Classifier</span>
        <span class="spacer"></span>
        <button mat-button [matMenuTriggerFor]="menu">{{authenticator.user.attributes?.email}}</button>
        <mat-menu #menu="matMenu">
            <button mat-menu-item (click)="authenticator.signOut()">Sign Out</button>
        </mat-menu>
    </mat-toolbar>
    <mat-drawer-container class="drawer-container" autosize>
        <mat-drawer #drawer class="sidenav" mode="side">
            <mat-nav-list>
                <a mat-list-item [routerLink]="link.path" *ngFor="let link of links"> {{ link.label }} </a>
            </mat-nav-list>
        </mat-drawer>

        <div class="sidenav-content">
            <router-outlet></router-outlet>
        </div>

    </mat-drawer-container>
</div>